{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/syvkst/JSONSchemas/master/offices.schema.json",
  "title": "Office",
  "description": "Offices in a region, contains users",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "required": ["id", "name"],
    "properties": {
      "id": {
        "description": "Unique id for the office",
        "anyOf": [{ "type": "string" }, { "type": "number" }]
      },
      "name": {
        "description": "Name of the office, localized",
        "type": "array",
        "items": {
          "$ref": "./localized_string.schema.json"
        }
      },
      "users": {
        "description": "Users for this office",
        "type": "array",
        "items": {
          "type": "number"
        }
      }
    }
  }
}
