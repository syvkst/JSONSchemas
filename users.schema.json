{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/syvkst/JSONSchemas/master/users.schema.json",
  "title": "User",
  "description": "Infos for users",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "required": ["id", "firstName", "lastName", "email"],
    "properties": {
      "id": {
        "description": "Unique id for the user",
        "anyOf": [{ "type": "string" }, { "type": "number" }]
      },
      "firstName": {
        "description": "User first name",
        "type": "string"
      },
      "lastName": {
        "description": "User last name",
        "type": "string"
      },
      "email": {
        "description": "User email",
        "type": "string"
      }
    }
  }
}
