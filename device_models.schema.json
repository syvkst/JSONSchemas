{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/syvkst/JSONSchemas/master/device_models.schema.json",
  "title": "Device models",
  "description": "Models of devices",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "description": "Device model (e.g. R2-D2)",
    "required": ["id", "name"],
    "properties": {
      "id": {
        "type": "number",
        "description": "Unique identifier"
      },
      "name": {
        "type": "string",
        "description": "Name of this device model"
      }
    }
  }
}
