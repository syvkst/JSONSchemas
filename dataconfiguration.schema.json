{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "/src/Schemas/dataconfiguration.schema.json",
  "title": "Data configuration",
  "description": "Configuration for a data type",
  "type": "object",
  "properties": {
    "props": {
      "type": "object",
      "description": "Properties of data in this configuration.",
      "patternProperties": {
        "^.*$": {
          "$ref": "./configurationproperty.schema.json"
        },
        "additionalProperties": false
      },
      "additionalProperties": false
    },
    "form": {
      "$ref": "./formconfig.schema.json"
    },
    "table": {
      "$ref": "./tableconfig.schema.json"
    },
    "allowEdit": {
      "type": "boolean",
      "description": "If set to true, entries are editable."
    },
    "allowCreate": {
      "type": "boolean",
      "description": "If set to true, a new entries can be created."
    },
    "allowDelete": {
      "type": "boolean",
      "description": "If set to true, entries can be deleted."
    }
  }
}
