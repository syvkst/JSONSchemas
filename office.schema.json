{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/syvkst/JSONSchemas/master/office.schema.json",
  "title": "Office",
  "description": "Office in a region, contains users",
  "type": "object",
  "required": ["id", "name"],
  "properties": {
    "id": {
      "description": "Unique id for the office",
      "anyOf": [{ "type": "string" }, { "type": "number" }]
    },
    "name": {
      "description": "Name of the office, localized",
      "$ref": "./localized_string.schema.json"
    },
    "users": {
      "description": "Users for this office",
      "type": "array",
      "items": {
        "$ref": "./user.schema.json"
      }
    }
  }
}
