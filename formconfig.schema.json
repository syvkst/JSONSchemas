{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "/src/Schemas/formconfig.schema.json",
  "title": "Form configuration",
  "description": "Configuration for the edit form.",
  "type": "object",
  "required": ["sections"],
  "properties": {
    "categories": {
      "type": "array",
      "description": "Categories this form belongs to. Localized.",
      "minItems": 1,
      "items": {
        "type": "array",
        "minItems": 1,
        "items": {
          "$ref": "./localized_string.schema.json"
        }
      }
    },
    "formTitle": {
      "type": "array",
      "description": "Title for this form. Localized.",
      "minItems": 1,
      "items": {
        "$ref": "./localized_string.schema.json"
      }
    },
    "sections": {
      "type": "array",
      "description": "Sections in this form.",
      "minItems": 1,
      "items": {
        "$ref": "./formsection.schema.json"
      }
    },
    "button": {
      "description": "Button for this form. Localized label.",
      "type": "object",
      "properties": {
        "label": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "./localized_string.schema.json"
          }
        }
      }
    },
    "width": {
      "type": "string",
      "description": "Width of the button (css property definition)."
    }
  }
}
