{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "/src/Schemas/editconfig.schema.json",
  "title": "Edit configuration",
  "type": "object",
  "required": ["props", "form"],
  "description": "Edit configuration of a model.",
  "properties": {
    "props": {
      "type": "object",
      "description": "Configurations for individual properties.",
      "patternProperties": {
        "^.*$": {
          "anyOf": [
            { "$ref": "./textfield.schema.json" },
            { "$ref": "./switchfield.schema.json" },
            { "$ref": "./selectfield.schema.json" }
          ]
        },
        "additionalProperties": false
      },
      "additionalProperties": false
    },
    "form": {
      "$ref": "./formconfig.schema.json"
    }
  }
}
